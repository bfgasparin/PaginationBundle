<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mqm_pagination.limit_per_page">6</parameter>
        <parameter key="mqm_pagination.request.namespace"></parameter>
        <parameter key="mqm_pagination.pagination_range"></parameter>        
        <parameter key="mqm_pagination.pagination.class">MQM\Bundle\PaginationBundle\Pagination\WebPagination</parameter>  
        <parameter key="mqm_pagination.page_factory.class">MQM\Bundle\PaginationBundle\Pagination\WebPageFactory</parameter>        
        <parameter key="mqm_pagination.helper.class">MQM\Bundle\PaginationBundle\Helper\Helper</parameter>
    </parameters>

    <services>
        <service id="mqm_pagination.pagination" class="%mqm_pagination.pagination.class%" public="true" scope="request">
            <argument type="service" id="mqm_pagination.helper" />
            <argument type="service" id="mqm_pagination.page_factory" />
            <argument type="service" id="router" />
            
            <call method="setLimitPerPage">
                <argument>%mqm_pagination.limit_per_page%</argument>
            </call>
            <call method="setRequestParamNamespace">
                <argument>%mqm_pagination.request.namespace%</argument>
            </call>
            <call method="setPaginationRange">
                <argument>%mqm_pagination.pagination_range%</argument>
            </call>            
        </service>
        
        <service id="mqm_pagination.page_factory" class="%mqm_pagination.page_factory.class%" public="true">
        </service>
        
        <service id="mqm_pagination.helper" class="%mqm_pagination.helper.class%" public="true"
            scope="request">
            <argument type="service" id="request" />
        </service>
    </services>
    
</container>
